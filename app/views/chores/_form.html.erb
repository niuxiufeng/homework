<%= simple_form_for @chore, :html => { :class => 'form-horizontal' } do |f| %>
    <td></td>

    <%= f.input :what_to_do, :label=>false %>
    <%= error_span(@chore[:what_to_do]) %>
    <%= f.input :how_long_time_spend, :label=>false%>
    <%= error_span(@chore[:how_long_time_spend]) %>
    <%= f.input :when_do_it, :label=>false%>
    <%= error_span(@chore[:when_do_it]) %>
    <%= f.input :family_id, :label=>false %>
    <%= error_span(@chore[:family_id]) %>
    <%= f.input :done, :label=>false %>
    <%= error_span(@chore[:done]) %>
    <%= f.input :done_time, :label=>false %>
    <%= error_span(@chore[:done_time]) %>

    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                chores_path, :class => 'btn btn-default' %>
<% end %>
