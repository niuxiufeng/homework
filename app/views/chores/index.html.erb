<p id="notice"><%= notice %></p>

<h1>Listing Chores</h1>

<table>
  <thead>
    <tr>
      <th>What to do</th>
      <th>How long time spend</th>
      <th>When do it</th>
      <th>Who do it</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chores.each do |chore| %>
      <tr>
        <td><%= chore.what_to_do %></td>
        <td><%= chore.how_long_time_spend %></td>
        <td><%= chore.when_do_it %></td>
        <td><%= chore.family.try(:name) %></td>
        <td><%= link_to 'Show', chore %></td>
        <td><%= link_to 'Edit', edit_chore_path(chore) %></td>
        <td><%= link_to 'Destroy', chore, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

